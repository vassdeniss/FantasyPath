@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BookViewModel>

@{
    ViewData["Title"] = "Add Book";
    ViewData["ShowAddButton"] = true;
}

<div class="container">
    <h2>Available Books</h2>
    <div class="row">
        @foreach (BookViewModel book in Model)
        {
            @await Html.PartialAsync("_BookCardPartial", book)
        }
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/book-card.css" />
}
